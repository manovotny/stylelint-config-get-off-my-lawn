{
    "name": "stylelint-config-get-off-my-lawn",
    "description": "A highly opinionated, sharable config of stylelint rules to produce beautiful, readable styles.",
    "version": "2.0.0",
    "author": {
        "name": "Michael Novotny",
        "email": "manovotny@gmail.com",
        "url": "https://manovotny.com"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/manovotny/stylelint-config-get-off-my-lawn.git"
    },
    "keywords": [
        "config",
        "css",
        "sass",
        "scss",
        "stylelint"
    ],
    "engines": {
        "node": ">=12.20.0"
    },
    "main": "index.js",
    "files": [
        "src"
    ],
    "scripts": {
        "check": "npm-check -u",
        "lint": "eslint . --ext .js --ext .json",
        "lint-staged": "lint-staged",
        "prettier": "prettier --write --ignore-unknown .",
        "prettier:check": "prettier --check --ignore-unknown .",
        "start": "node index.js",
        "test": "npm run lint && npm run prettier:check"
    },
    "git": {
        "pre-commit": "lint-staged"
    },
    "lint-staged": {
        "*": "prettier --write --ignore-unknown"
    },
    "dependencies": {
        "fs-extra": "10.0.1",
        "merge-anything": "4.0.5",
        "stylelint-a11y": "1.2.3",
        "stylelint-at-rule-no-children": "0.3.1",
        "stylelint-config-prettier": "9.0.3",
        "stylelint-declaration-block-no-ignored-properties": "2.5.0",
        "stylelint-high-performance-animation": "1.6.0",
        "stylelint-no-indistinguishable-colors": "1.3.0",
        "stylelint-no-nested-media": "0.1.0",
        "stylelint-order": "5.0.0",
        "stylelint-react-native": "2.4.0",
        "stylelint-scss": "4.1.0",
        "stylelint-selector-no-empty": "1.0.8"
    },
    "devDependencies": {
        "@vercel/git-hooks": "1.0.0",
        "eslint": "8.7.0",
        "eslint-config-get-off-my-lawn": "7.0.2",
        "lint-staged": "12.3.4",
        "npm-check": "5.9.2",
        "prettier": "2.5.1",
        "prettier-config-get-off-my-lawn": "1.0.0",
        "stylelint": "14.3.0"
    },
    "peerDependencies": {
        "stylelint": ">=14.3.0"
    }
}
